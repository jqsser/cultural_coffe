<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ProfilUserController"
            prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f6f9;">

    <!-- Left Side: Profile Info -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="300"
              style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <ImageView fx:id="imgPhoto"
                       fitWidth="150" fitHeight="150" preserveRatio="true"
                       style="-fx-clip-shape: 'circle'; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.5, 0, 2);"
            />
            <Label fx:id="lblName" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label fx:id="lblLastname" style="-fx-text-fill: #666;" />
            <Label fx:id="lblEmail" style="-fx-text-fill: #666;" />
            <Label fx:id="lblVerified" style="-fx-text-fill: green;" />
            <Label fx:id="lblDateCreation" style="-fx-text-fill: #999;" />
            <Button text="✏️ Update Info" onAction="#goToUpdatePage"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </VBox>
    </left>

    <!-- Center: Reserved for future posts -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="User Posts Will Be Displayed Here" style="-fx-text-fill: #bbb; -fx-font-style: italic;"/>
        </VBox>
    </center>
</BorderPane>
