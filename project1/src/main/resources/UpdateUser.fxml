<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UpdateUserController">

    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Update User Info" style="-fx-font-size: 20px;" />

        <!-- Profile Photo -->
        <ImageView fx:id="imgProfile" layoutX="50.0" layoutY="60.0" fitWidth="120" fitHeight="120" preserveRatio="true" />

        <TextField fx:id="txtName" layoutX="225.0" layoutY="50.0" />
        <TextField fx:id="txtLastname" layoutX="225.0" layoutY="124.0" />
        <TextField fx:id="txtEmail" layoutX="225.0" layoutY="198.0" />
        <TextField fx:id="txtPhoto" layoutX="225.0" layoutY="272.0" />
        <Button layoutX="360.0" layoutY="272.0" text="Browse" onAction="#browsePhoto"/>

        <Label layoutX="113.0" layoutY="54.0" text="Name" />
        <Label layoutX="113.0" layoutY="119.0" text="Last Name" />
        <Label layoutX="116.0" layoutY="191.0" text="Email" />
        <Label layoutX="116.0" layoutY="265.0" text="Photo Path" />

        <Button layoutX="439.0" layoutY="330.0" text="Update" onAction="#updateUserInfo" />
    </children>
</AnchorPane>
